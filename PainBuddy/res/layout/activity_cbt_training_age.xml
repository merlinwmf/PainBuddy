<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cbt_syn_layout_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cbt_welcome_background1">
    
          
    <ImageButton
        android:id="@+id/changeBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/change_background"
        android:contentDescription="@string/desc"
        android:onClick="changeBackground"
        android:scaleX=".5"
        android:scaleY=".5"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    
    <ImageButton
	    android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/goback"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:onClick="onClick"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/cbt_mindfulness"
        android:background="@drawable/mindfulness"
        android:layout_marginLeft="-105dp"
        android:layout_marginTop="265dip"        
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:onClick="onClick"
        />
        
	<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/cbt_guided_imagery"
        android:background="@drawable/guidedimagery"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="330dip"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:onClick="onClick"
        />
            
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/cbt_distraction_tech"
        android:background="@drawable/distractiontechniques"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="400dip"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:onClick="onClick"
        />  
        
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/cbt_belly_breathing"
        android:background="@drawable/bellybreathing"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="480dip"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:onClick="onClick"
        />
              
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/cbt_body_relax"
        android:background="@drawable/bodyrelaxation"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="555dip"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:onClick="onClick"
       />

    <ImageView
        android:id="@+id/im_penguin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cbt_syn_penguin" />
       
</RelativeLayout>

