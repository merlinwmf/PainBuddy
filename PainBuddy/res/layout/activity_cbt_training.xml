<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cbt_welcome_layout_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cbt_welcome_background1">
    
   <ImageView
        android:id="@+id/im_penguin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cbt_welcome_penguin"
        android:scaleX="0.5"
        android:scaleY="0.5"/>
    
    
    <ImageView
        android:id="@+id/im_choc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/choc"
        android:scaleX="0.9"
        android:scaleY="0.9"/>
   
	<ImageView
        android:id="@+id/im_calplug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/calplug"
        android:scaleX="0.7"
        android:scaleY="0.7"
        /> 
        
    <ImageButton
        android:id="@+id/ib_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/enter"
        android:onClick="onClick"/>       
    <ImageButton
	    android:id="@+id/ib_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_enter"
        android:layout_alignParentRight="true"
        android:src="@drawable/exit"
        android:onClick="onClick"/>
    <ImageButton
        android:id="@+id/cbt_welcome_change_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/change_background"
        android:onClick="onClick"
        android:scaleX="0.5"
        android:scaleY="0.5"        
        />       
    <ImageButton
	    android:id="@+id/cbt_welcome_drag_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/drag_switch"
        android:scaleX="0.5"
        android:scaleY="0.5"
       
        />

</RelativeLayout>
