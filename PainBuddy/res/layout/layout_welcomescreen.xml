<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_screen_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/login2"
    android:layout_gravity="center">
	    
    <TextView 
        android:id="@+id/helloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="120dp"/>
    
    <ImageButton
        android:id="@+id/changeBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/change_background"
        android:contentDescription="@string/desc"
        android:onClick="changeBackground"
        android:scaleX=".5"
        android:scaleY=".5"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
	<ImageButton
        android:id="@+id/message_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@drawable/message_center"
        android:scaleX="0.6"
        android:scaleY="1"
        android:contentDescription="@string/desc"
        android:onClick="startMessageCenter"/>
	<ImageButton
            android:id="@+id/welcome_penguin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/login_penguin"
            android:scaleX="1"
            android:scaleY="1.5"
            android:contentDescription="@string/desc"
            android:onClick="startDiary"/>
    <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/settings"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:contentDescription="@string/desc"
            android:onClick="startSettings"/>
    <ImageButton
            android:id="@+id/welcome_screen_button_cbt_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/cbttools"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:contentDescription="@string/desc"
            android:onClick="startCBT"/>
    <ImageButton
            android:id="@+id/coin_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/coinbank"
            android:scaleX="0.5"
            android:scaleY="1.2"
            android:contentDescription="@string/desc"
            android:onClick="startStatistics"/>
    
    <ImageButton
            android:id="@+id/speech_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/start_diary"
            android:scaleX=".98"
            android:scaleY=".63"
            android:contentDescription="@string/desc"
            android:onClick="startDiary"/>
    

    
</RelativeLayout>
